{
  "permissions": {
    "allow": [
      "Bash(npx tsc:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push)",
      "Bash(npm run build:*)",
      "Bash(npm test:*)",
      "Bash(ls:*)",
      "Bash(npm run dev:*)",
      "Bash(git push:*)",
      "Bash(git checkout:*)",
      "Bash(git merge:*)",
      "Bash(supabase:*)",
      "Bash(grep:*)",
      "Bash(taskkill:*)",
      "Bash(timeout /t:*)",
      "Bash(npx kill-port:*)",
      "Bash(npx jest:*)",
      "Bash(curl:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "{\n  \"postToolUseHooks\": [\n    {\n      \"matcher\": \"edit\",       // Se activa cuando Claude usa la herramienta \"edit\"\n      \"command\": \"tsc --no-emit\" // El comando de consola que quieres ejecutar\n    }\n  ]\n}"
          }
        ]
      },
      {
        "matcher": "npx tsc --noEmit.",
        "hooks": [
          {
            "type": "command",
            "command": "npx tsc --noEmit"
          }
        ]
      }
    ]
  }
}
